<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_medium"
    app:cardElevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/pexels_photo_1054201_small">

        <ImageView
            android:id="@+id/iv_topic_icon"
            android:layout_width="32dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_favorite_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_xxlarge"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basics"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold"
            android:layout_alignTop="@id/iv_topic_icon"
            android:layout_toRightOf="@id/iv_topic_icon"
            android:layout_marginLeft="@dimen/margin_large" />

        <TextView
            android:id="@+id/tv_topic_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_topic_icon"
            android:layout_below="@id/tv_topic_name"
            android:text="Learn Meditation Fundamental"
            android:textColor="@color/white_full"
            android:textSize="@dimen/text_regular_2x"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_alignBottom="@id/iv_topic_icon"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>