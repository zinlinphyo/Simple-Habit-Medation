<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_heading_content"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_start_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/start_here"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_3x" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_start_here"
                app:cardCornerRadius="@dimen/margin_medium"
                app:cardElevation="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_flower_background">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_medium"
                        android:clickable="true"
                        android:foreground="@drawable/bg_ripple_white"
                        android:src="@drawable/ic_add_24dp"
                        android:tint="@color/white_full" />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_round_accent"
                        android:drawableLeft="@drawable/ic_play_arrow_24dp"
                        android:drawablePadding="@dimen/margin_medium"
                        android:paddingLeft="@dimen/margin_xxlarge"
                        android:paddingRight="@dimen/margin_xxlarge"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_regular_3x"
                        android:text="Start"
                        android:textColor="@color/white_full"
                        android:layout_marginTop="@dimen/margin_medium"/>

                    <TextView
                        android:id="@+id/tv_simple_habit_starter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/btn_start"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:text="Simple Habit Starter"
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/text_heading_1x" />

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_medium_2"
                        android:textSize="@dimen/text_regular_2x"
                        android:text="5 mins"
                        android:textColor="@color/white_full" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Topics"
            android:textColor="@color/white_full"
            android:layout_margin="@dimen/margin_medium"
            android:textSize="@dimen/text_regular_3x"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:nestedScrollingEnabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Meditate"
                android:drawableTop="@drawable/ic_play_circle_filled_24dp"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x"
                android:layout_margin="@dimen/margin_medium"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Me"
                android:drawableTop="@drawable/ic_person_24dp"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x"
                android:textAlignment="center"
                android:layout_margin="@dimen/margin_medium"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="More"
                android:drawableTop="@drawable/ic_more_horiz_24dp"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x"
                android:layout_margin="@dimen/margin_medium"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>